<header role="banner" class="pagewidth mx-auto md:mb-16 ">
  <nav x-data="{mobileMenu:false}" :class="mobileMenu ? 'bg-gray-500' : ''">

  {#- Large sreen main menu -#}
  <div class="hidden md:flex items-center justify-between">
    <a href="/" title="{{site.title}}" class="">
      {{ site.title}}
      <span class="sr-only">{{site.title}}</span>
    </a>

    {% set cssMenu = "" %}

    <ul class="flex w-1/3 justify-end content-center">
      <li class="">
        <a href="/post" class="{{ cssMenu }} {% if '/post' in page.url %}font-bold {% else %} {% endif %}"> post</a>
      </li>
    </ul>
  </div>

  {%- include "components/nav/menu.njk" %}


  {# mobile menu items #}
	<div class="md:hidden flex flex-grow justify-between pt-4">
    <div class="w-64 ml-4">
      <a href="/" title="{{site.title}}" class="h-12">
        LOGO
        <span class="sr-only">{{site.title}}</span>
      </a>
    </div>
		{# Hamburger #}
    <button class="md:hidden p-2"
      @click="mobileMenu = ! mobileMenu" type="button"	aria-controls="mobile-menu" aria-expanded="false">
			<span class="sr-only">Open main menu</span>
			{# burger icon #}
			<svg :class="mobileMenu ? 'hidden' : 'block'" class="h-6 w-6"
				xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
			  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
			</svg>
			{# close icon #}
			<svg :class="mobileMenu ? '' : 'hidden'" class="h-6 w-6"
				xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
			</svg>
		</button>
	</div>

	{#-  Mobile menu -#}
	<ul class="md:hidden p-t-12 p-4 space-y-8 flex flex-col pb-8" x-show="mobileMenu">
		<li class="text-center"><a href="/session" class="text-lg font-bold text-black hover:text-theme-red">menu 1</a></li>
		<li class="text-center"><a href="/signup" class="text-lg font-bold text-black hover:text-theme-red">menu 2</a></li>
	</ul>
</nav>

</header>
